{
  "manifest_version": 3,
  "name": "Route Finder Extension",
  "description": "Find the nearest route based on pickup or delivery address.",
  "version": "1.0",
  "host_permissions": [
    "https://www.nqcdan.rocks/*"
  ],
  "permissions": [
    "activeTab",
    "geolocation",
    "clipboardRead",
    "contextMenus",
    "storage",
    "commands",
    "tabs",
    "nativeMessaging"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "commands": {
    "toggle-popup": {
      "suggested_key": {
        "default": "Ctrl+A",
        "mac": "Command+A"
      },
      "description": "Toggle the popup"
    },
    "highlight-find-port": {
      "suggested_key": {
        "default": "Ctrl+E",
        "mac": "Command+E"
      },
      "description": "Find nearest port for highlighted text"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "scripts/contentScript.js"
      ],
      "css": [
        "contentStyles.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "images/icon-16.png",
        "ports.json"
      ],
      "matches": [
        "https://*/*"
      ]
    }
  ]
}